// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                Int                @id @default(autoincrement())
  name              String             @default("Default User")
  email             String?            @unique
  settings          String             @default("{}")  // JSON string
  moments           Moment[]
  tags              Tag[]
  pushSubscriptions PushSubscription[]
  createdAt         DateTime           @default(now())
}

model Moment {
  id              Int      @id @default(autoincrement())
  description     String
  gpsLat          Float    @default(0.0)
  gpsLng          Float    @default(0.0)
  gpsAccuracy     Float?   // GPS accuracy in meters
  locationName    String?  // Short address (e.g., "Main St, New York, USA")
  locationAddress String?  // Full address JSON string
  imageUrl        String?
  audioUrl        String?
  videoUrl        String?
  mood            String?  // e.g., "happy", "sad", "excited", "calm"
  weather         String?  // e.g., "sunny", "rainy", "cloudy"
  isPublic        Boolean  @default(false)
  shareToken      String?  @unique
  viewCount       Int      @default(0)
  userId          Int      @default(1)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId      Int?
  category        Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  tags            MomentTag[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([createdAt])
  @@index([userId])
  @@index([shareToken])
  @@index([gpsLat, gpsLng])
}

model Tag {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  color     String      @default("#3b82f6")
  userId    Int         @default(1)
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  moments   MomentTag[]
  createdAt DateTime    @default(now())
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  icon        String   @default("üìÅ")
  description String?
  moments     Moment[]
  createdAt   DateTime @default(now())
}

model MomentTag {
  momentId  Int
  tagId     Int
  moment    Moment   @relation(fields: [momentId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@id([momentId, tagId])
  @@index([momentId])
  @@index([tagId])
}

model PushSubscription {
  id        Int      @id @default(autoincrement())
  userId    Int      @default(1)
  endpoint  String   @unique
  auth      String
  p256dh    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
}
